<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--Tree view-->
    <record id="view_sale_channel_mirakl_tree" model="ir.ui.view">
        <field name="name">mirakl.backend.tree</field>
        <field name="model">sale.channel.mirakl</field>
        <field name="arch" type="xml">
            <tree>
                <field name="channel_id" />
                <field name="location" />
                <field name="api_key" />
                <field name="offer_filename" />
                <field name="shop_id" />
                <field name="data_to_export" />
                <field name="data_to_import" />
            </tree>
        </field>
    </record>

    <!-- Vue form -->
    <record id="view_sale_channel_mirakl_form" model="ir.ui.view">
        <field name="name">sale.channel.mirakl.form</field>
        <field name="model">sale.channel.mirakl</field>
        <field name="arch" type="xml">
            <form string="Sale Channel Mirakl">
                <sheet>
                    <group>
                        <field name="channel_id" />
                        <field name="location" />
                        <field name="api_key" />
                        <field name="offer_filename" />
                        <field name="shop_id" />
                    </group>
                    <group>
                        <group>
                            <field name="data_to_export" />
                            <field name="data_to_import" />
                            <field name="max_items_to_import" />
                        </group>

                        <group>
                            <field name="attachment_delation_day" />
                            <field name="warehouse_id" />
                            <field name="default_country_id" />
                            <field name="import_orders_from_date" />
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!--Action-->
    <record id="sale_channel_mirakl_action" model="ir.actions.act_window">
        <field name="name">Mirakl Sale Channel</field>
        <field name="res_model">sale.channel.mirakl</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
