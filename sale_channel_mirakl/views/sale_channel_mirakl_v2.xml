<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--Tree view-->
    <record id="view_sale_channel_mirakl_tree" model="ir.ui.view">
        <field name="name">mirakl.backend.tree</field>
        <field name="model">sale.channel.mirakl</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name" />
            <field name="location" />
            <field name="binded_product_ids" widget="many2many_tags" />
          </tree>
        </field>
    </record>

    <!-- Vue form -->
    <record id="view_sale_channel_mirakl_form" model="ir.ui.view">
        <field name="name">sale.channel.mirakl.form</field>
        <field name="model">sale.channel.mirakl</field>
        <field name="arch" type="xml">
            <form string="Sale Channel Mirakl">
                <group>
                    <field name="name" />
                    <field name="active" />
                    <field name="location" />
                    <field name="api_key" />
                </group>
                <group>
                    <field name="offer_filename" />
                    <field name="shop_id" />
                    <field name="binded_product_ids" widget="many2many_tags" />
                </group>



                <button
                    name="action_view_binded_products"
                    string="View Binded Products"
                    type="object"
                    class="oe_highlight"
                />

            </form>
        </field>
    </record>


    <!-- Vue action pour afficher les produits liÃ©s -->
    <record id="action_view_binded_products" model="ir.actions.act_window">
        <field name="name">Binded Products</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--Action-->
    <record id="sale_channel_mirakl_action" model="ir.actions.act_window">
        <field name="name">Mirakl SAle Channel</field>
        <field name="res_model">sale.channel.mirakl</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
